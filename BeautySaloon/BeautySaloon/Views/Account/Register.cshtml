@model BeautySaloon.ViewModels.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #666666;">
    @*<a asp-action="Register" asp-controller="Account">Регистрация</a>*@
    
    <div class="limiter">

        <div class="container-login100">
           
            <div class="wrap-login100">
                <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="login100-form validate-form">
                    <span class="login100-form-title p-b-58">
                        Register to continue
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Введите имя">
                        <input asp-for="Name" maxlength="50" class="input100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Name" class="label-input100">Name</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Введите фамилию">
                        <input asp-for="Surname" maxlength="50" class="input100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Surname" class="label-input100">Surname</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Введите отчество">
                        <input asp-for="Patronymic" maxlength="50" class="input100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Patronymic" class="label-input100">Patronymic</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Введите дату рождения">
                        <input asp-for="Date" class="input100 ">
                        
                        <span asp-validation-for="Date" class="label-date">Date of birthday</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Введите номер телефона в формате +375ХХ1112233">
                        <input asp-for="Phone" onkeyup="this.value = this.value.replace(/[^0-9+]/g, '')" maxlength="13" class="input100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Phone" class="label-input100">Контактный номер</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Введите Email в формате: email@abc.xyz">
                        <input asp-for="Email" class="input100" type="email" maxlength="100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Email" class="label-input100">Email</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="Password" class="input100" type="password" maxlength="100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Password" class="label-input100">Password</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Повторите пароль">
                        <input asp-for="ConfirmPassword" class="input100" type="password" maxlength="100">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="ConfirmPassword" class="label-input100">Confirm Password</span>
                    </div>


                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="REGISTER" />


                    </div>

                    @*<div class="text-center p-t-46 p-b-20">
                <span class="txt2">
                    or sign up using
                </span>
            </div>

            <div class="login100-form-social flex-c-m">
                <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
                    <i class="fa fa-facebook-f" aria-hidden="true"></i>
                </a>

                <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                </a>
            </div>*@
                </form>

                <div class="login100-more">
                   
                </div>

            </div>
        </div>
    </div>



    <!--===============================================================================================-->
    <script src="~/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/js/main.js"></script>

</body>
</html>