@model IEnumerable<BeautySaloon.Models.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>История заказов</title>
    <link href="~/Index/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Index/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" type="text/css" href="~/css/navbar.css">

    <!-- Load an icon library to show a hamburger menu (bars) on small screens -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!--===JS===========================================================================-->
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="topnav" id="myTopnav">
        <a asp-action="Orders" class="active">История заказов</a>
        <a asp-action="Index">Общие данные</a>
        <a asp-action="Edit" >Редактировать профиль</a>

        <a class="rightuser" asp-controller="Menu" asp-action="Home">Вернуться на сайт</a>
        <a class="rightuser" asp-controller="Account" asp-action="Logout">Выйти</a>
        <a href="javascript:void(0);" class="icon" onclick="topnavHamburger()">
            <i class="fa fa-bars"></i>
        </a>
    </div>
    
        
            <div class="prices agile wow zoomIn" data-wow-duration="1.5s" data-wow-delay="0.1s">
                <div class="container">
                    <div class="prices-grids">
                   @if (Model.Count() > 0)
                   {
                       int i = 1;
                        @foreach (var item in Model)
                        {
                            <div class="col prices-grduser" style="margin-right: 15px;margin-bottom: 20px">
                                <div class="price-back">
                                    <div class="price-head ">
                                        <h4>Заказ №@i</h4>
                                        <h4 style=" font-size:15px">@item.Date</h4>
                                    </div>
                                    <div class="price-pad">
                                        <ul>
                                            <li><span class="glyphicon glyphicon-ok" style="margin: 0px 6px 0px 0px;" aria-hidden="true"></span>@item.Service.Name</li>
                                        </ul>
                                        <div class="price-book">
                                            <a class="play-icon popup-with-zoom-anim">@item.Master.Surname @item.Master.Name</a>
                                        </div>
                                        <p>@item.Service.Price BYN</p>
                                    </div>
                                </div>
                            </div>
                            i++;
                        }
                    }
                    else 
                    { 
                        <h4 >История заказов пуста</h4>
                    }
                        </div>
                </div>
            </div>
          
    

</body>
</html>
