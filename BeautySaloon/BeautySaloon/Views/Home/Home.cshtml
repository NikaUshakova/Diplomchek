@model BeautySaloon.Models.Order
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Beauty Center</title>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Angel Spa Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <link href="~/Index/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link rel="stylesheet" href="~/Index/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/Index/css/lightbox.css" type="text/css" media="all" />
    <link href="~/Index/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/css/popup.css" rel='stylesheet' type='text/css' />
    <link href="~/css/TextStyle.css" rel='stylesheet' type='text/css' />
    <!-- js -->
    <script src="~/Index/js/jquery-1.11.1.min.js"></script>

    <!-- //js -->
    <!-- Custom Theme files -->
    <!--webfont-->
    <link href='//fonts.googleapis.com/css?family=Gabriela' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="~/Index/js/move-top.js"></script>
    <script type="text/javascript" src="~/Index/js/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <!-- start-smoth-scrolling -->
    <script src="~/Index/js/responsiveslides.min.js"></script>
    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 4
            $("#slider3").responsiveSlides({
                auto: true,
                pager: false,
                nav: false,
                speed: 500,
                namespace: "callbacks",
                before: function () {
                    $('.events').append("<li>before event fired.</li>");
                },
                after: function () {
                    $('.events').append("<li>after event fired.</li>");
                }
            });
        });
    </script>
    <script type="text/javascript">
        $(window).load(function () {
            $("#flexiselDemo1").flexisel({
                visibleItems: 3,
                animationSpeed: 1000,
                autoPlay: true,
                autoPlaySpeed: 3000,
                pauseOnHover: true,
                enableResponsiveBreakpoints: true,
                responsiveBreakpoints: {
                    portrait: {
                        changePoint: 480,
                        visibleItems: 1
                    },
                    landscape: {
                        changePoint: 640,
                        visibleItems: 1
                    },
                    tablet: {
                        changePoint: 1080,
                        visibleItems: 2
                    }
                }
            });

        });
    </script>
    <script type="text/javascript" src="~/Index/js/jquery.flexisel.js"></script>
    <!---start-date-piker---->
    <script src="~/Index/js/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker,#datepicker1").datepicker();
        });
    </script>
    <!---/End-date-piker---->
    <!--animate-->
    <link href="~/Index/css/animate.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/Index/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <!--//end-animate-->
    <style>
        select {
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="banner w3l">
        <div class="navigation wow zoomIn" data-wow-duration="1.5s" data-wow-delay="0.3s">
            <div class="container">
                <nav class="navbar navbar-default">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="logo">
                            <div class="grid__item color-3">
                                <h1><a class="link link--nukun" asp-action="Home"><span>N</span>ika <i>Beauty Center</i></a></h1>
                            </div>
                        </div>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse nav-wil" id="bs-example-navbar-collapse-1">
                        <nav class="menu menu--horatio">
                            <ul class="nav navbar-nav menu__list">
                                <li class="menu__item menu__item--current"><a asp-action="Home" class="menu__link">Home</a></li>
                                <li class="menu__item"><a href="#about" class="menu__link scroll">О салоне красоты</a></li>
                                <li class="menu__item"><a href="#services" class="menu__link scroll">Услуги</a></li>
                                <li class="menu__item"><a href="#openModal">Онлайн запись</a></li>
                                @*   <li class="menu__item"><a href="#prices" class="menu__link scroll">Prices</a></li>
                                    <li class="menu__item"><a href="#team" class="menu__link scroll">Team</a></li>
                                    <li class="menu__item"><a href="#contact" class="menu__link scroll">Contact</a></li>*@

                            </ul>
                        </nav>
                    </div>
                </nav>
            </div>
        </div>
        <div class="banner-info wow bounceInDown" data-wow-duration="1s" data-wow-delay="0s">
            <div class="container">
                <div class="callbacks_container">
                    <ul class="rslides" id="slider3">
                        <li>
                            <div class="banner-text">
                                <h3>Beauty Center "Nika"</h3>
                                <h4>Парикмахерские услуги, вечерние и свадебные прически, косметические комплексы, маникюр/педикюр</h4>
                                <h4>
                                    Прекрасное времяпровождение с пользой для себя!
                                </h4>
                                <div class="clearfix"></div>
                            </div>
                        </li>
                        <li>
                            <div class="banner-text">
                                <h3>Beauty Center "Nika"</h3>
                                <h4>Hairdressing, evening and wedding hairstyles, cosmetic complexes, manicure/pedicure</h4>
                                <h4>
                                    Have a great time with the benefit of yourself!
                                </h4>
                                <div class="clearfix"></div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- POPUP -->
        <div id="openModal" class="modalDialog">        
        <div>
            <a href="#close" title="Закрыть" class="close">X</a>
            <form asp-action="CreateOrder" method="post">
                <h3 class="title">Онлайн запись<span></span></h3>
                <h3 class="text">Выберите дату: </h3>
                <p><input asp-for="Date" type="date"  required=""></p>

                <h3 class="text">Выберите мастера: </h3>
                <div>
                    <select class="view" asp-for="MasterID" asp-items="ViewBag.Masters"></select>
                </div>
                <h3 class="text">Выберите услугу: </h3>
                <div>
                    <select class="view" asp-for="ServiceID" asp-items="ViewBag.Services" ></select>
                </div>                

                <input class="border" type="submit" value="Записаться">
            </form>
        </div>        
    </div>
   

    <!--//banner bottom-->
    <div id="about" class="feature all_pad wthree">
        <div class="container">
            <h3 class="title">О салоне<span></span></h3>
            <p class="para">
                О салоне
            </p>
            <div class="about-grids">
                <div class="col-md-6 feature-grid-one wow bounceInUp" data-wow-duration="1.5s" data-wow-delay="0s">
                    <div class="port-8 effect-3">
                        <div class="image-box">
                            <img src="~/Index/images/p8.jpg" alt="Image-3">
                        </div>
                        <div class="text-desc">
                            <h4>Hair Styles</h4>
                            <p>TEXT</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 feature-grid wow bounceInUp" data-wow-duration="1.5s" data-wow-delay="0s">
                    <h4><span>Makeup & Hair Designs</span></h4>
                    <p>
                        Большой текст
                    </p>
                    <p>
                        текст
                    </p>
                    <a href="#small-dialog" class="play-icon popup-with-zoom-anim hvr-rectangle-out button">Записаться</a>
                    <a href="#treatments" class="hvr-rectangle-in button red scroll">OUR TREATMENTS</a>
                                       
                   
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>


    <!--banner bottom-->
    <div id="services" class="services all_pad w3ls">
        <div class="container">
            <h3 class="title">Услуги в салоне красоты<span></span></h3>
            <div class="ser-top-grids">
                <div class="col-md-4 ser-grid wow flipInY" data-wow-duration="1.5s" data-wow-delay="0s">
                    <div class="con-left text-center">
                        <div class="spa-ico"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></div>
                        <h5>Парикмахерские услуги</h5>
                        @foreach (var service in ViewBag.Services1)
                        {
                            <p>@service</p>
                        }
                    </div>
                </div>
                <div class="col-md-4 ser-grid wow flipInY" data-wow-duration="1.5s" data-wow-delay="0s">
                    <div class="con-left text-center">
                        <div class="spa-ico"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></div>
                        <h5>Прически</h5>
                        @foreach (var service in ViewBag.Services2)
                        {
                            <p>@service</p>
                        }
                    </div>
                </div>
                <div class="col-md-4 ser-grid wow flipInY" data-wow-duration="1.5s" data-wow-delay="0s">
                    <div class="con-left text-center">
                        <div class="spa-ico"><span class="glyphicon glyphicon-leaf" aria-hidden="true"></span></div>
                        <h5>Ногтевой сервис</h5>
                        @foreach (var service in ViewBag.Services3)
                        {
                            <p>@service</p>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>



</body>
</html>
