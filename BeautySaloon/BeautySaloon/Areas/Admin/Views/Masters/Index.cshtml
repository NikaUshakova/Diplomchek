@model BeautySaloon.Models.Master

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/css/table.css">
    <link rel="stylesheet" type="text/css" href="~/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="~/css/popup.css">
    <link rel="stylesheet" type="text/css" href="~/css/TextStyle.css">

    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="topnav" id="myTopnav">
        <a asp-controller="Order" asp-action="DoneWorks">Выполненные работы</a>
        <a asp-action="Index" class="active">Мастера</a>
        <a href="#contact">Услуги</a>
        <a href="#about">Клиенты</a>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div style="overflow-x:auto;">
        <table>
            @*<caption>Выполненные работы</caption>*@
            <tr>
                <th>ID</th>
                <th>Фамилия </th>
                <th>Имя </th>
                <th>Отчество</th>
                <th>Дата рождения</th>
                <th>Контактный телефон</th>
                <th></th>
            </tr>

            <tbody>
                @foreach (var item in ViewBag.Masters)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Surname
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Patronymic
                        </td>
                        <td>
                            @item.Date
                        </td>
                        <td>
                            @item.Phone
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Редактирование</a> |
                            @*<a asp-action="Details" asp-route-id="@item.ID">Details</a> |*@
                            <a asp-action="Delete" asp-route-id="@item.ID">Удаление</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @*onclick="document.getElementById('editpopup').style.display='block'" *@
    <!-- POPUP -->
    <div id="editpopup" class="modalLogin" style="height: 100%;padding-top: 100px;">

        <!-- Modal Content -->
        <form class="modal-content animate" asp-action="Edit" method="post">
            <div class="containerLogin">
                @*@foreach (var item in ViewBag.masterid)
                    {*@
                <h3 class="title">Редактирование информации о мастере<span></span></h3>
                <input type="hidden" asp-for="ID" />
                <label class="text">Фамилия: </label>
                <input asp-for="Surname" maxlength="50" type="text" placeholder="Введите фамилию" required>

                <label class="text">Имя: </label>
                <input asp-for="Name" maxlength="50" type="text" placeholder="Введите имя" required>

                <label class="text">Отчество: </label>
                <input asp-for="Patronymic" maxlength="50" type="text" placeholder="Введите отчество" required>

                <label class="text">Дата рождения: </label>
                <p><input asp-for="Date" id="datePicker" type="date" placeholder="Введите дату рождения" required=""></p>

                <label>Телефон:</label>
                <input asp-for="Phone" type="text" onkeyup="this.value = this.value.replace(/[^0-9+]/g, '')" maxlength="13" placeholder="Введите номер телефона" required>

                <button class="OK" type="submit">Изменить данные</button>
            </div>
            <div class="containerLogin" style="background-color:#f1f1f1">
                <a class="cancelbtn" asp-action="Index">Cancel</a>
            </div>
        </form>

    </div>

</body>
</html>
